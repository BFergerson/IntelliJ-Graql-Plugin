<idea-plugin>
    <id>com.intellij.lang.graql</id>
    <name>Graql</name>
    <version>1.3</version>
    <vendor email="support@sourceplusplus.com" url="https://sourceplusplus.com">Source++</vendor>

    <description><![CDATA[
      Graql language support
    ]]></description>

    <change-notes><![CDATA[
    ]]>
    </change-notes>

    <idea-version since-build="145.0"/>
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileTypeFactory implementation="com.intellij.lang.graql.GraqlFileTypeFactory"/>
        <lang.syntaxHighlighterFactory language="Graql"
                                       implementationClass="com.intellij.lang.graql.highlighter.GraqlSyntaxHighlighterFactory"/>
        <lang.parserDefinition language="Graql"
                               implementationClass="com.intellij.lang.graql.GraqlParserDefinition"/>
        <psi.referenceContributor language="Graql"
                                  order="first"
                                  implementation="com.intellij.lang.graql.reference.GraqlReferenceContributor"/>
        <lang.findUsagesProvider language="Graql"
                                 implementationClass="com.intellij.lang.graql.usage.GraqlFindUsagesProvider"/>
        <lang.refactoringSupport language="Graql"
                                 implementationClass="com.intellij.lang.graql.refactor.GraqlRefactoringSupportProvider"/>
        <lang.namesValidator language="Graql"
                             implementationClass="com.intellij.lang.graql.refactor.GraqlNamesValidator"/>
        <completion.contributor language="Graql"
                                implementationClass="com.intellij.lang.graql.completion.GraqlCompletionContributor"/>
        <lang.commenter language="Graql" implementationClass="com.intellij.lang.graql.refactor.GraqlCommenter"/>

        <!-- inspections -->
        <inspectionToolProvider
                implementation="com.intellij.lang.graql.inspection.unusedDeclaration.GraqlUnusedDeclarationProvider"/>
        <inspectionToolProvider
                implementation="com.intellij.lang.graql.inspection.undefinedDeclaration.GraqlUndefinedDeclarationProvider"/>
        <inspectionToolProvider
                implementation="com.intellij.lang.graql.inspection.duplicateDeclaration.GraqlDuplicateDeclarationProvider"/>
        <inspectionToolProvider
                implementation="com.intellij.lang.graql.inspection.unplayedRole.GraqlUnplayedRoleProvider"/>
        <inspectionToolProvider
                implementation="com.intellij.lang.graql.inspection.invalidTypeUsage.GraqlInvalidTypeUsageProvider"/>
    </extensions>

</idea-plugin>
